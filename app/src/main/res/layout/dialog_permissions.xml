<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/bg_white_corner"
    style="@style/BottomDialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:lineSpacingExtra="4dp"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="获取设备的定位设备"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dg_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="#424242"
            android:textSize="17sp"
            android:background="@drawable/bg_permissionsbt_corner"/>


        <TextView
            android:id="@+id/dg_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="始终允许"
            android:textColor="#00A8E1"
            android:textSize="17sp"
            android:background="@drawable/bg_permissionsbt_corner"/>

    </LinearLayout>
</LinearLayout>